<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sabji"
    android:padding="10sp"
    tools:context=".AdminSection">


    <LinearLayout
        android:padding="20sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="20sp"
            android:text="Add Charge"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FB3C00"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/charge"
            android:hint="Charge"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:backgroundTint="#EDA48E"
            android:padding="10sp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5sp"/>

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:backgroundTint="#FFB300"
            android:text="Update"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:background="#FA3C00"
            android:layout_width="match_parent"
            android:layout_height="2sp"/>



        <TextView
            android:layout_marginBottom="20sp"
            android:text="Add Product"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FB8C00"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/post_oneLiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20sp">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:backgroundTint="#F4E8C9"
                android:elevation="5sp"
                android:hint="Product Title"
                android:padding="10sp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:layout_marginTop="20sp"
                android:background="#F3E5C4"
                android:elevation="5sp"
                android:gravity="top"
                android:hint="Product Description"
                android:padding="10sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="#F3E5C4"
                android:elevation="5sp"
                android:gravity="top"
                android:hint="MRP"
                android:inputType="number"
                android:padding="10sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sale_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="#F3E5C4"
                android:elevation="5sp"
                android:gravity="top"
                android:hint="Sale price"
                android:inputType="number"
                android:padding="10sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/upload"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:elevation="5sp"
                android:src="@drawable/posting" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20sp"
                android:backgroundTint="#FFB300"
                android:text="Publish"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/post_recycler"
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>